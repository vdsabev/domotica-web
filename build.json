{
  "env": {
    "NODE_ENV": "production"
  },
  "tasks": [
    {
      "type": "css",
      "minify": "true",
      "output": "./build/stylesheets/style",
      "files":
      [
        "./less/style.less"
      ]
    },
    {
      "type": "js",
      "minify": "true",
      "output": "./build/scripts/app",
      "files":
      [
        "./lib/angular.min.js",
        "./lib/angular-ui.min.js",

        "./lib/jstorage.js",
        "./lib/lodash.min.js",
        "./lib/moment.min.js",
        "./lib/socket.io.min.js",

        "./scripts/app.js",
        "./scripts/controllers.js",
        "./scripts/directives.js"
      ]
    },
    { "type": "jade", "output": "./build/main", "files": ["./views/main.jade"] },
    {
      "type": "copydir",
      "source": "./images/",
      "target": "./build/images/"
    }
  ]
}
