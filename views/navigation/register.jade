.register(ng-controller="create.registration")
  input(type="text", ng-model="registration.name", placeholder="Name")
  br
  input(type="email", ng-model="registration.email", placeholder="Email")
  br
  input(type="password", ng-model="registration.password", placeholder="Password")
  br
  input(type="password", ng-model="registration.confirmation", placeholder="Password Confirmation")
  br
  input(type="button", value="Register", ng-click="register()")
