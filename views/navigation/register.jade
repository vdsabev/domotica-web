.register(ng-controller="registration.create")
  input(type="text", ng-model="registration.name", i18n="{ attr: { placeholder: 'name' } }")
  br
  input(type="email", ng-model="registration.email", i18n="{ attr: { placeholder: 'email' } }")
  br
  input(type="password", ng-model="registration.password", i18n="{ attr: { placeholder: 'password' } }")
  br
  input(type="password", ng-model="registration.confirmation", i18n="{ attr: { placeholder: 'passwordConfirmation' } }")
  br
  input(type="button", i18n="{ attr: { value: 'register' } }", ng-click="register()")
