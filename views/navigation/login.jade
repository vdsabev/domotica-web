.login(ng-controller="session.create")
  input(type="text", ng-model="credentials.email", i18n="{ attr: { placeholder: 'email' } }")
  br
  input(type="password", ng-model="credentials.password", i18n="{ attr: { placeholder: 'password' } }")
  br
  input(type="button", i18n="{ attr: { value: 'login' } }", ng-click="login()")
  label
    input(type="checkbox", ng-model="credentials.remember")
    span(i18n="rememberMe")
